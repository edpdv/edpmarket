<p id="contents"><%= notice %></p>

<h1>Lista Contenuti</h1>

<table>
	<thead>
		<tr>
			<th>Immagine</th>
			<th>Titolo</th>
			<th>Descrizione</th>
			<th>Utente</th>
			<th>Prezzo</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @contents.each do |content| %>
			<tr>
				<% if content.cover.representation(resize_to_limit: [100, 100]) %>
				<td><%= image_tag content.cover.representation(resize_to_limit: [100, 100]) %></td>
				<% else %>
				<th>Immagine non caricata!</th>
				<% end %>
				<td><%= content.titolo %></td>
				<td><%= content.descrizione %></td>
				<td><%= content.user.name %></td>
				<td><%= content.price %></td>
				<td><%= link_to "Mostra", content %></td>
				<% if content.user == current_user %>
					<td><%= link_to "Modifica", edit_content_path(content) %></td>
					<td><%= link_to "Elimina", content, method: :delete, data: {confirm: 'Sei sicuro di voler cancellare il contenuto?'} %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to "Nuovo Contenuto", new_content_path, class:"waves-effect waves-light blue darken-4 btn"%>

