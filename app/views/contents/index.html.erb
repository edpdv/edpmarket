<p id="contents"><%= notice %></p>

<!-- <h1>Lista Contenuti</h1> -->

<div class="row">
	<% @contents.each do |content| %>
		<div class="col s3"> 
		    <div class="card">
			    <div class="card-image waves-effect waves-block waves-light">
			    	<% if content.cover %>
			    		<%= image_tag content.cover, class: "activator" %>
			    	<% else %>
						<th>Immagine non caricata!</th>
					<% end %>
			      
			    </div>
			    <div class="card-content">
			      <span class="card-title activator grey-text text-darken-4"><%= content.titolo %></span>
				    <div>
					    <span>Venduto da <%= content.user.name %></span>
					    <span class="right"><%= number_to_currency(content.price) %></span>
			        </div>
			        <br>
	      			<div class="center"><%= link_to "Scopri di piÃ¹", content, class: "waves-effect waves-light blue darken-4 btn" %></div>
		    		<% if content.user == current_user %>
		    			<br>
			    		<div class="center">
				      		<p><%= link_to "Edit", edit_content_path(content) %>
				      		<%= link_to "Elimina", content, method: :delete, data: {confirm: 'Sei sicuro di voler cancellare il contenuto?'} %></p>
			      		</div>	
		      		<% end %>		      				  
			    </div>

			    <div class="card-reveal">
			    	<span class="card-title grey-text text-darken-4"><%= content.titolo %><i class="material-icons right">close</i></span>
			    	<p><%= content.descrizione %></p>
			    </div>
		    </div>
	    </div>
    <% end %>
</div>
            
<br>
<div class="center">

<%= will_paginate @content %>

</div>
<br>
