<div id="<%= dom_id content %>">

  <div class="row">
    <div class="col l6">  
	    <% if content.cover %>
	      <%= image_tag content.cover %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col l6">
      <p>
        <%= content.titolo %>
      </p>
      <p>  
        <%= content.descrizione %>
      </p>
      <p>  
        <%= content.price %>
      </p>
    </div>
  </div>

</div>
