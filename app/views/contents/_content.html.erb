<div id="<%= dom_id content %>">

  <div class="row">
    <div class="col l6">  
	    <% if content.cover.representation(resize_to_limit: [400, 400]) %>
	      <%= image_tag content.cover.representation(resize_to_limit: [400, 400]), class: "show-img" %>
      <% end %>
    </div>
  
    <div class="col l6">

      <h2 class="show-titolo"> <%= content.titolo %> </h2>
      <h4 class="show-prezzo"> <%= number_to_currency(content.price) %> </h4>
      <p>Venduto da <%= content.user.name %> </p>
      <p> <%= content.descrizione %> </p>

    </div>
  </div>

</div>
